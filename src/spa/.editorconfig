# editorconfig.org

[*.{css,ts,tsx}]
indent_size=4
tab_width=4

[*.{js,json,jsx}]
indent_size=2
tab_width=2

[*.{cshtml,htm,html,razor}]
indent_size=2
tab_width=4
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# All files
[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
quote_type = single

# New line preferences
end_of_line = lf
